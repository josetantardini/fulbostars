extends layout

block header 
    .contenedor
        h1= namepage
        p Coloca tu nuevo password
        form(method="post")
            label(for="password") New Password:
            input(type="password" id="password" name="password" placeholder="New Password" required)
            input(type="submit" value="Reset password" name="enviar" class="boton")
            a(href="/login") Iniciar sesion 

            if success
                p(class="alert alert-success")= success
        
